!!! Strict
%html
  %head
    %meta{ "http-equiv" => "Content-type", :content => "text/html; charset=utf-8" }
    %title
      Happy Holidays 2010!
    %style{ :type => "text/css", :media => "screen" }
      body {
      background: #366e04 url('/images/xmas-2010/background.png') repeat-x;
      color: white;
      font-family: Georgia;
      font-weight: .9em;
      }
      
      \#content {
      width: 700px;
      margin: auto;
      }
      
      h1 {
      font-size: 250%;
      text-align: center;
      padding-bottom: 25px;
      background: url('/images/xmas-2010/candy_cane.png') repeat-x bottom left;
      }
      
      img { border: none; }
      
      \#message {
      clear: both;
      text-align: center;
      font-size: 120%;
      padding-top: 20px;
      }
      
      \#pictures {
      width: 625px;
      text-align: center;
      margin: 0px auto;
      }
      
      \#footer {
      width: 650px;
      font-size: 70%;
      font-style: italic;
      text-align: center;
      border-top: solid 1px #a2d02a;
      padding-top: 3px;
      margin: 15px auto;
      }
      
      a, a:hover, a:focus, a:active {
      color: #a2d02a;
      }
      
      \.portrait  { width: 150px; }
      \.landscape { width: 240px; }
      
      \.polaroid {
      padding: 10px 10px 7px 10px;
      margin: 3px;
      border: 1px solid #BFBFBF;
      background-color: white;
      \-webkit-box-shadow: 2px 2px 3px rgba(135, 139, 144, 0.4);
      \-moz-box-shadow: 2px 2px 3px rgba(135, 139, 144, 0.4);
      box-shadow: 2px 2px 3px rgba(135, 139, 144, 0.4);
      
      text-align: center;
      color:black;
      text-decoration: none;
      
      \/* Stylings to rotate images on hover */
      \-webkit-transform: rotate(10deg);
      \-webkit-transition: -webkit-transform 0.5s ease-in;
      
      \/* Stylings to pull the image off the table */
      z-index: 2;
      \-webkit-box-shadow: 2px 2px 4px rgba(0,0, 0, 0.3);
      \-moz-box-shadow: 2px 2px 4px rgba(0,0, 0, 0.3);
      box-shadow: 2px 2px 4px rgba(0,0, 0, 0.3);
      \-webkit-transform: rotate(10deg);
      \-moz-transform: rotate(10deg);
      transform: rotate(10deg);
      \-webkit-transition: all 0.5s ease-in;
      }
      
      a.polaroid:hover, a.polaroid:focus, a.polaroid:active {
      \-webkit-transform: rotate(0deg);
      
      \/* Stylings to pull the image off the table */
      z-index: 999;
      border-color: #6A6A6A;
      \-webkit-box-shadow: 15px 15px 20px rgba(0,0, 0, 0.4);
      \-moz-box-shadow: 15px 15px 20px rgba(0,0, 0, 0.4);
      box-shadow: 15px 15px 20px rgba(0,0, 0, 0.4);
      \-webkit-transform: rotate(0deg) scale(1.05);
      \-moz-transform: rotate(0deg) scale(1.05);
      transform: rotate(0deg) scale(1.05);
      }
      
      \.pull-left.polaroid {
      \-webkit-transform: rotate(-9deg);
      \-moz-transform: rotate(-9deg);
      transform: rotate(-9deg);
      }
      
      \.center.polaroid {
      \-webkit-transform: rotate(0deg);
      \-moz-transform: rotate(0deg);
      transform: rotate(0deg);
      }
      
      \.pull-right.polaroid {
      \-webkit-transform: rotate(9deg);
      \-moz-transform: rotate(9deg);
      transform: rotate(9deg);
      }
      
      \#pic_1 {
      position: relative; float: left;
      }
      
      \#pic_2 {
      position: relative; float: left;
      }
      
      \#pic_3 {
      position: relative; float: left;
      }
